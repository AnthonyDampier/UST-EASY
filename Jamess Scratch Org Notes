Scholarship_Applicant__c.sharingRules-meta.xml

<?xml version="1.0" encoding="UTF-8"?>
<SharingRules xmlns="http://soap.sforce.com/2006/04/metadata">
    <sharingGuestRules>
        <fullName>Scholarship_Recommender</fullName>
        <accessLevel>Read</accessLevel>
        <description>People asked to recommend a student need to access to Scholarship and Scholarship Applicant objects so they can write their recommendations. See related permission sets.</description>
        <label>Scholarship Recommender</label>
        <sharedTo>
            <guestUser>EASY_Applicant_Portal</guestUser>
        </sharedTo>
        <criteriaItems>
            <field>Scholarship__c</field>
            <operation>notEqual</operation>
            <value>null</value>
        </criteriaItems>
        <includeHVUOwnedRecords>false</includeHVUOwnedRecords>
    </sharingGuestRules>
</SharingRules>
